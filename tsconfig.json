{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./lib",
        "importHelpers": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "baseUrl": "./"
    },
    "exclude": [
        "**/*.spec.ts",
        "*/.spec.ts",
        "tests",
        "lib",
        "spec"
    ]
}
